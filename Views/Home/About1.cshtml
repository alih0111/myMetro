@* Modal Script *@
<script>
    var btn_showModal = document.getElementById('btn_showModal')
    var myModalLabel = document.getElementById('myModalLabel')
    var myModalBody = document.getElementById('myModalBody')
    var myModal = new bootstrap.Modal(document.getElementById('myModal'), {
        keyboard: false
    })
    btn_showModal.addEventListener('click', function () {
        $.get("/home/TestConnection", function (result) {
            myModal.show();
            myModalLabel.innerHTML = "تست اتصال";
            myModalBody.innerHTML = result;
        })
    })
</script>

