@* Items Moves Script *@
<script>
    if (window.innerWidth > 1200 || window.innerWidth > 1500) {
        let cc = document.querySelectorAll(".item-fallow");
        let i = 0
        cc.forEach(() => {
            cc[i].classList.remove('images')
            cc[i].classList.remove(`image${i}`)
            i++;
        });
    }
    window.addEventListener("mousemove", (e) => {
        let xx = (e.clientX / document.body.offsetWidth) * 65
        let cc = document.querySelector('.container')
        //const { x, y } = window.screen.getBoundingClientRect();
        if (xx > 70) {
            xx = 70;
        }
        if (xx < 30) {
            xx = 30;
        }
        let yy = (e.clientY / document.body.offsetHeight) * 270
        if (yy > 70) {
            yy = 70;
        }
        if (yy < 30) {
            yy = 30;
        }
        document.body.style.setProperty(
            "--mouse-x1", xx
        );
        //document.body.style.setProperty("--mouse-x1", e.clientX - x);
        document.body.style.setProperty(
            "--mouse-y1", yy
        );
    }, false);
